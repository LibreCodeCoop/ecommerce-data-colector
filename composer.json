{
	"name" : "lyseontech/coleta-dados-ecommerce",
	"description" : "Coleta de dados em site de e-commerce",
	"license" : "MIT",
	"type" : "cli-app",
	"homepage" : "https://github.com/lyseontech/coleta-dados-ecommerce",
	"authors" : [{
			"name" : "Vitor Mattos",
			"homepage" : "https://github.com/vitormattos"
		}
	],
	"support" : {
		"source" : "https://github.com/lyseontech/coleta-dados-ecommerce",
		"issues" : "https://github.com/lyseontech/coleta-dados-ecommerce/issues"
	},
	"keywords" : [
		"scrapper",
		"e-commerce"
	],
    "minimum-stability": "dev",
	"autoload" : {
		"psr-4" : {
			"ColetaDados\\" : "src/Coleta"
		}
	},
	"require" : {
		"php" : ">=7",
		"symfony/console" : "^3.2",
        "league/climate": "^3.4",
		"symfony/lock": "^5.0@dev"
	},
	"require-dev" : {
		"phpunit/phpunit" : "^6.1",
		"squizlabs/php_codesniffer" : "^3.0",
		"overtrue/phplint" : "^0.2.1",
		"phpstan/phpstan" : "^0.7.0"
	},
	"scripts" : {
		"phpcs" : "phpcs --standard=PSR2 -n src",
		"phpcbf" : "phpcbf --standard=PSR2 -n src",
		"phplint" : "phplint src",
		"unit" : "php -d phar.readonly=0 vendor/bin/phpunit --coverage-clover ./tests/log/clover.xml --colors=always",
		"phpstan" : "vendor/bin/phpstan analyse src --level 7",
		"test" : [
			"@unit",
			"@phpcs",
			"@phplint",
			"@phpstan"
		]
	},
	"bin" : [
		"bin/coleta-dados"
	]
}
